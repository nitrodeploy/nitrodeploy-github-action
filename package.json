{
  "name": "nitrodeploy-github-action",
  "type": "module",
  "version": "0.4.2",
  "packageManager": "pnpm@8.8.0",
  "description": "add description",
  "author": "add author",
  "license": "MIT",
  "funding": "https://github.com/sponsors/productdevbook",
  "homepage": "https://github.com/nitro-deploy/nitro-deploy-github-action",
  "repository": {
    "type": "git",
    "url": "https://github.com/nitro-deploy/nitro-deploy-github-action.git"
  },
  "bugs": "https://github.com/nitro-deploy/nitro-deploy-github-action/issues",
  "keywords": [
    "add keywords"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm build && bumpp --commit --push --tag",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "nitrodeploy": "^0.7.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.8.0",
    "@types/node": "^20.11.25",
    "@vitest/coverage-v8": "^2.1.3",
    "bumpp": "^9.4.0",
    "eslint": "^9.12.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.10.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "vitest": "^2.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm eslint . --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
